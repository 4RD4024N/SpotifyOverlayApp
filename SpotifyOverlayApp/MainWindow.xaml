<Window x:Class="SpotifyOverlayNoAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpotifyOverlay"
        Width="420" Height="100"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        Opacity="0">

    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.4" />
        </Storyboard>

        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1" To="0" Duration="0:0:0.4" />
        </Storyboard>
    </Window.Resources>


    <Grid Margin="10">
        <Border CornerRadius="18"
                Padding="18"
                Background="{StaticResource GradientBG}"
                Effect="{DynamicResource DropShadow}">
            <StackPanel>
                <TextBlock Text="🎵 Şarkı" FontSize="14" Foreground="#aaa"/>
                <TextBlock x:Name="SongText" FontSize="18" Foreground="White" FontWeight="SemiBold" Margin="0,2,0,8"/>
                <TextBlock x:Name="VolumeText" FontSize="14" Foreground="#ccc"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
