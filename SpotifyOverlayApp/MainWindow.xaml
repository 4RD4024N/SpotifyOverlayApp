<Window x:Class="SpotifyOverlayNoAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpotifyOverlay"
        Width="420" Height="150"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        Opacity="0">

    <Window.Resources>
        <CubicEase x:Key="SmoothEase" EasingMode="EaseInOut"/>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.7"
                             EasingFunction="{StaticResource SmoothEase}" />
        </Storyboard>
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.7"
                             EasingFunction="{StaticResource SmoothEase}" />
        </Storyboard>
    </Window.Resources>

    <Grid Margin="10">
        <!-- Bu Border tıklanamaz olacak -->
        <Border x:Name="MainBorder"
                Background="{DynamicResource CurrentGradient}"
                CornerRadius="18"
                Padding="18"
                Effect="{DynamicResource DropShadow}"
                IsHitTestVisible="False">
            <!-- işte burası -->
            <StackPanel>
                <TextBlock x:Name="SongText"
                           FontSize="20"
                           Foreground="White"
                           FontWeight="Bold"
                           FontFamily="Segoe UI"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap"
                           Margin="0,0,0,6"/>

                <TextBlock x:Name="VolumeText"
                           FontSize="13"
                           Foreground="#CCCCCC"
                           FontFamily="Segoe UI Semilight"
                           TextWrapping="NoWrap"
                           Margin="0,0,0,2"/>
            </StackPanel>
        </Border>

        <!-- Bu düğme tıklanabilir olacak -->
        <Button x:Name="SettingsButton"
                Content="⚙"
                Width="30" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                Click="SettingsButton_Click"
                Background="Transparent"
                Foreground="White"
                FontSize="16"
                Cursor="Hand"/>
    </Grid>
</Window>
